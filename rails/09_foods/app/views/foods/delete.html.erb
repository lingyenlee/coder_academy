<%= link_to("<<< Back to list", foods_path) %>
<div>
  <h2>Delete Food</h2>
  <%= form_with model: @food, :method => "delete" do |f| %>
    <table>
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Beer</th>
        <td><%= f.text_field(:beer) %></td>
      </tr>
      <tr>
        <th>Dessert</th>
        <td><%= f.text_field(:dessert) %></td>
      </tr>
      <tr>
        <th>Calories</th>
        <td><%= f.text_field(:calories) %></td>
      </tr>
    </table>
    <h3>Are you sure you want to delete this food?</h3>
    <div class="form-buttons">
      <%= f.submit("Delete Food") %>
    </div>
  <% end %>
</div>
