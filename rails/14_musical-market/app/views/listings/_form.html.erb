<% if listing.errors.any? %>
  <ul>
    <% listing.errors.full_messages.each do |error| %>
      <li> <%= error %></li>
    <% end %>
  </ul>
<%end%>
<%= form_with model: listing, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, value: listing.title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description, value: listing.description %>
  </div>
  <div>
    <%= f.label :price %>
    <%= f.number_field :price, value: listing.price, min: 0 %>
  </div>
  <div>
    <%= f.label :picture %>
    <%= f.file_field :picture, accept:
  'image/png,image/gif,image/jpeg,image/jpg' %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end%>
