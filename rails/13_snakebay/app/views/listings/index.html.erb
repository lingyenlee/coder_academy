<h1>Snake Listings</h1>
<%= link_to("Add new listing", new_listing_path) %>
<div>
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Breed</th>
        <th>Sex</th>
        <th>Price</th>
        <th>City</th>
        <th>State</th>
      </tr>
    </thead>
    <tbody>
      <% @listings.each do |listing| %>
        <tr>
          <td><%= listing.id %></td>
          <td><%= listing.title%></td>
          <td><%= listing.breed.name %></td>
          <td><%= listing.sex %></td>
          <td>$ <%= listing.price %></td>
          <td><%= listing.city %></td>
          <td><%= listing.state %></td>
          <td><%= link_to('Show', listing_path(listing)) %></td>
          <!-- can create another form to have a delete submit button
         do the delete -->
          <!-- the edit and delete functions do not show if 
the user didn't create the lisiting -->
          <% if current_user.id == listing.id %>
            <td><%= link_to('Edit', edit_listing_path(listing)) %></td>
            <td><%= link_to('Delete', delete_listing_path(listing)) %> </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
